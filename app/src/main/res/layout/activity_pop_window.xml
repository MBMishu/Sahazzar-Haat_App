<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popWindow"
    android:background="@drawable/pop_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/linear_layout1">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/who"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_layout1"
        android:layout_centerInParent="true"
        android:id="@+id/linear_layout2"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/english"
            android:layout_below="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:background="@drawable/button_red"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="6dp"
            android:clickable="true"
            android:onClick="getEnglish"/>
        <Button
            android:id="@+id/bangla"
            android:layout_below="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="বাংলা"
            android:background="@drawable/button_red"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:onClick="getBangla"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_layout2"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/linear_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Contact"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:layout_marginLeft="4dp"
            android:clickable="true"
            android:onClick="gofacebook"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/messenger"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:onClick="goMessenger"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/world"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:onClick="goWebsite"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_below="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Team  সাহায্যের হাত"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_marginTop="16dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/hand"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>



</RelativeLayout>